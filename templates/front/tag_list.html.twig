{% extends ('front/base.html.twig') %}

{% block metaTitle %}
    La liste des tags
{% endblock metaTitle %}

{% block main %}

    <div class="tag-container">
        {% for tag in tags %}
            <article class="tag">
                <p style="background:{{ tag.color }} ">{{ tag.title }}</p>
                <a href={{ path ('tag_show',{'id' : tag.id}) }}>Voir plus</a>
            </article>
        {% endfor %}
    </div>

{% endblock main %}