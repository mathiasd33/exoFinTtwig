<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block metaTitle %}{% endblock metaTitle %}</title>
    <link rel="stylesheet" href="{{ asset('style.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>

<header class="headerS">
        <div class= "logoMenu">
            <div class="logo">
               <a href={{ path ('admin_home') }}><img src={{ asset ('medias/symfony.png') }}  class="resp"></a>
            </div>

            <div class="menuB" >
                <a href={{ path ('admin_categorie_list') }}><img src={{ asset ('medias/menuB.png') }} alt="menu" class="resp"></a>
            </div>

            <div>
                {% if app.user %}
                    <div class="mb-3">
                        <p><strong>Bienvenue: </strong> {{ app.user.username }}</p>
                        </p> <a href="{{ path('app_logout') }}">Se déconnecter</a>
                        <a href="{{ path('adminInsertUser') }}">/Ajouter un utlisateur</a>
                    </div>
                {% endif %}
            </div>


        </div>

    <div>
        {% for message in app.flashes('succes') %}
            <div class="flash">
                {{ message }}
            </div>
        {% endfor %}
    </div>
</header>

<main>

    {%block main%}

    {%endblock main%}

</main>

<footer class="footerE">
    <div class="nav_foot">
        <nav>
            <ul>
                <li><a href={{ path ('admin_article_list') }}>articles</a></li>
                <li><a href={{ path ('admin_categorie_list') }}>catégories</a></li>
                <li><a href={{ path ('admin_tag_list') }}>Tags</a></li>

            </ul>
        </nav>
    </div>
</footer>


</body>
</html>